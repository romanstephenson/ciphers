@model DiffieHellman;

@{
    ViewData["Title"] = "DiffieHellman Exchange";
}

<div class="text-center">
    <h1 class="display-4">DiffieHellman Exchange</h1>
    <p>Please enter your chosen prime number and private key below:</a></p>
</div>

@using (Html.BeginForm("DiffieHellmanExchange", "DiffieHellman", FormMethod.Post))
{

    <div class="form-group">
        <label class="control-label" for="SenderPrimeNumber">Sender Prime Number:</label>
        @Html.TextBoxFor(m => m.SenderPrimeNumber, new { Class = "form-control"})
        <span class="text-danger">@Html.ValidationMessageFor(m => m.SenderPrimeNumber)</span>
    </div>
    <br>
    <div class="form-group">
        <label class="control-label" for="SenderPrivateKey">Sender Private Key:</label>
        @Html.TextBoxFor(m => m.SenderPrivateKey, new { Class = "form-control"})    
        <span class="text-danger">@Html.ValidationMessageFor(m => m.SenderPrivateKey)</span>    
    </div>
    <br>
    <div class="form-group">
        <label class="control-label" for="SenderPrimitiveRoot">Sender Primitive Root:</label>
        @Html.TextBoxFor(m => m.SenderPrimitiveRoot, new { Class = "form-control"})    
        <span class="text-danger">@Html.ValidationMessageFor(m => m.SenderPrimitiveRoot)</span>    
    </div>
    <br>
    @* <div class="form-group">
        <input type="submit" value="Generate" class="btn btn-primary" />
    </div>  *@

    <div class="form-group">
        <label class="control-label" for="ReceiverPrimeNumber">Receiver Prime Number:</label>
        @Html.TextBoxFor(m => m.ReceiverPrimeNumber, new { Class = "form-control"})
        <span class="text-danger">@Html.ValidationMessageFor(m => m.ReceiverPrimeNumber)</span>
    </div>
    <br>
    <div class="form-group">
        <label class="control-label" for="ReceiverPrivateKey">Receiver Private Key:</label>
        @Html.TextBoxFor(m => m.ReceiverPrivateKey, new { Class = "form-control"})    
        <span class="text-danger">@Html.ValidationMessageFor(m => m.ReceiverPrivateKey)</span>    
    </div>
    @* <br>
    <div class="form-group">
        <label class="control-label" for="SenderPrimitiveRoot">Receiver Primitive Root:</label>
        @Html.TextBoxFor(m => m.SenderPrimitiveRoot, new { Class = "form-control"})    
        <span class="text-danger">@Html.ValidationMessageFor(m => m.SenderPrimitiveRoot)</span>    
    </div> *@
    <br>
    <div class="form-group">
        <input type="submit" value="Generate" class="btn btn-primary" />
    </div> 
}


<br>
<div class="form-group">
    @if(@ViewBag.SenderPublicKey is null)
    {
        <input class="form-control" type="text" value="DiffieHellman SenderPublicKey key will be shown here" disabled>
    }
    else
    {   
        <label class="control-label" for="SenderPublicKey">Sender Public Key:</label>
        <input class="form-control" type="text" value="@ViewBag.SenderPublicKey" disabled>
    }
</div>
